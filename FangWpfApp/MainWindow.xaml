<DMSkin1:DMSkinWindow
    xmlns:DMSkin1="clr-namespace:DMSkin;assembly=DMSkin"
        xmlns:DMSkin="clr-namespace:DMSkin.WPF;assembly=DMSkin.WPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FangWpfApp"
        xmlns:Controls="clr-namespace:DMSkin.WPF.Controls;assembly=DMSkin.WPF" 
        x:Class="FangWpfApp.MainWindow"
        mc:Ignorable="d"
        Title="Windows程序设计" Height="420" Width="800"
        MinWidth="380"
        MinHeight="300"
        WindowStartupLocation="CenterScreen"
        Foreground="White"
        ResizeMode="NoResize"
        SystemButtonCloseOverColor="Red"
        SystemButtonColor="{StaticResource TransparentColor}"
        SystemButtonForeground="#666666"
        SystemButtonOverColor="#10000000"
        SystemButtonSize="50">

    <Grid>
        <TabControl HorizontalAlignment="Left" Height="376" VerticalAlignment="Top" Margin="0,20,0,0" Width="782" BorderThickness="0">

            <TabItem Header="DLL" FontSize="15"  BorderThickness="0" Width="60">
                <Grid Background="Transparent" Margin="0,0,0,0" >
                    <Label Content="原数组：" HorizontalAlignment="Left" Height="28" Margin="189,50,0,0" VerticalAlignment="Top" Width="68" FontSize="15"/>
                    <Controls:DMButton Content="C#冒泡排序" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" Width="98" Height="34" Click="Btn_Sort_Click"/>
                    <Controls:DMButton Content="生成数组" HorizontalAlignment="Left" Margin="588,50,0,0" VerticalAlignment="Top" Width="84" Height="34" Click="Btn_GenerateArr_Click" />
                    <Controls:DMButton Content="C++归并排序" HorizontalAlignment="Center" Margin="0,169,0,0" VerticalAlignment="Top" Width="98" Height="34" Click="Btn_Sort2_Click"/>
                    <Label Content="排序后：" HorizontalAlignment="Left" Height="28" Margin="189,242,0,0" VerticalAlignment="Top" Width="68" FontSize="15"/>
                    <TextBlock HorizontalAlignment="Left" Height="23" Margin="276,55,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="307" x:Name="OriginArrayTxt"/>
                    <TextBlock HorizontalAlignment="Left" Height="23" Margin="276,247,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="307" x:Name="ResultArrayTxt"/>

                </Grid>
            </TabItem>

            <TabItem Header="COM" FontSize="15" Width="60">
                <Grid Background="#FFFFFF">
                    <Controls:DMButton Content="自定义COM" HorizontalAlignment="Left" Height="35" Margin="22,40,0,0" VerticalAlignment="Top" Width="102"/>
                    <Controls:DMButton Content="Word COM" HorizontalAlignment="Left" Height="35" Margin="22,120,0,0" VerticalAlignment="Top" Width="102"/>
                    <Controls:DMButton Content="Excel COM" HorizontalAlignment="Left" Height="35" Margin="22,200,0,0" VerticalAlignment="Top" Width="102"/>
                </Grid>
            </TabItem>

            <TabItem Header="IPC" FontSize="15" Width="60">
                <Grid Background="#FFFFFF"/>
            </TabItem>
        </TabControl>
        <Controls:DMSystemCloseButton Content="退出" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" Margin="0,377,0,0" Width="80" Height="40" Cursor="Hand"/>
    </Grid>
</DMSkin1:DMSkinWindow>
